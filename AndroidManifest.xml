<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.astrid.widgetbar"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="15" />
    <uses-permission
         android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <use-permission
        android:name="android.permission.RECEIVE_BOOT_COMPLETE" />
    <use-permission
        android:name="android.permission.VIBERATE" />
    <use-permission
        android:name="android.permission.EXPAND_STATUS_BAR" />
    
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" 
        android:name=".widgetBarApplication">
        <activity
            android:name=".WidgetBarActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service android:name=".widgetBarService" />
        <receiver 
            android:name="org.astrid.BootReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter >
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
         </receiver>
    </application>
         
</manifest>